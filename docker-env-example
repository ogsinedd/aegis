# Настройки базы данных
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=aegis
DATABASE_URL=postgresql://postgres:postgres@aegis-db:5432/aegis

# Настройки Docker
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_API_VERSION=1.47

# Настройки сканирования
SCAN_INTERVAL=600  # 10 минут
DOCKER_SOCKET=/var/run/docker.sock
SCANNER=grype

# Режим разработки
DEV_MODE=false

# Настройки сервера
LOG_LEVEL=INFO

# Планировщик
ALPHA=0.6  # Вес CVSS
BETA=0.3   # Вес Impact Factor
GAMMA=0.1  # Вес Exploit Probability 
